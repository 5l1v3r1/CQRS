{
  "metadata": [
    {
      "src": [
        {
          "files"	: [ "**/*.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "cwd"	: "Framework"
        }
      ],
      "dest"		: "wiki/docs/api/yml/4.0"
    }
  ],
  "build"			: {
    "content"		: [
      {
        "files"	: [ "*.yml" ],
        "cwd"		: "wiki/docs/api/yml/4.0",
        "dest"		: "wiki/docs/api/4.0/html/"
      },
      {
        "files"	: [ "articles/**/*.md", "*.md", "toc.yml", "restapi/**" ]
      }
    ],
    "resource"		: [
      {
        "files"	: [ "articles/images/**"]
      }
    ],
    "overwrite"	: "specs/*.md",
    "globalMetadata": {
      "_appTitle"	: "CQRS.NET API Reference Documentation version 4.0",
      "_enableSearch": true,
		"_disableContribution": true
    },
    "dest"			: "wiki/docs/api/html"
  }
}